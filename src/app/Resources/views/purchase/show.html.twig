{% extends 'Layout/crud.html.twig' %}

{% block body %}
    <h1>Purchase</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ purchase.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if purchase.date %}{{ purchase.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ purchase.user.fullName }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>
                    <ul>
                        {% for product in purchase.products %}
                            <li>{{ product.title }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('staff_purchase_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('staff_purchase_edit', { 'id': purchase.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
